<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/inigan"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Activity Journal"
        android:textColor="@color/white"
        android:textSize="60px"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="75dp"
        tools:layout_conversion_absoluteWidth="111dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Username"
        android:drawableRight="@drawable/baseline_account_circle_black_24dp"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        tools:layout_conversion_absoluteHeight="45dp"
        tools:layout_conversion_absoluteWidth="13dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="176dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:baselineAligned="false"
        android:hint="Password"
        android:drawableRight="@drawable/password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        tools:layout_conversion_absoluteHeight="45dp"
        tools:layout_conversion_absoluteWidth="190dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="221dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:background="@drawable/button"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:theme="@style/button1"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="150dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="266dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:text="Register"
        android:textColor="@color/white"
        android:theme="@style/button1"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="150dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Lupa Sandi?"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="75dp"
        tools:layout_conversion_absoluteWidth="111dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="100dp" />

</LinearLayout>